<% include ../partials/navbar.ejs %>
<% include ../partials/header.ejs %>
<!-- Main Content -->
<main class="container">
    <div class="row" style="color: yellow;">
        <h1><%= title %></h1>
        <br>
        <div>
            <a href="/inventory/add" class="btn btn-primary align-self-end" role="button">
                <i class="fas fa-plus-circle"></i> 
                Add a new Item
            </a>                
        </div>

        <div class="table-responsive" style="color: yellow;" >
            <table class="table table-bordered table-striped table-hover" style="color: yellow;">
                <!-- Header Row-->
                <tr>
                    <th class="text-center" style="color: yellow;">Item</th>
                    <th class="text-center"style="color: yellow;">Qty</th>
                    <th class="text-center"style="color: yellow;">Status</th>
                    <th style="color: yellow;">Size</th>
                    <th class="text-center"style="color: yellow;">Tags</th>
                    <th class="text-center" colspan="2"style="color: yellow;">Actions</th>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < InventoryList.length; count++) { %>
                    <tr>
                        <td class="text-center"><%= InventoryList[count].item %></td>
                        <td class="text-center"><%= InventoryList[count].qty %></td>
                        <td class="text-center"><%= InventoryList[count].status %></td>
                        <td>
                            Hight: <%= InventoryList[count].size.h %><br/>
                            Width: <%= InventoryList[count].size.w %><br/>
                            UOM: <%= InventoryList[count].size.uom %><br/>
                        </td>
                        <td class="text-center"><%= InventoryList[count].tags %></td>
                        <td class="text-center">
                            <a href="/inventory/edit/<%= InventoryList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i></a>
                        </td>
                        <td class="text-center">
                            <a href="/inventory/delete/<%= InventoryList[count]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>
  <% include ../partials/btmnav.ejs %>